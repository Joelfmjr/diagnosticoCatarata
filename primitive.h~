enum bool
{
	true = 1,
	false = 0
} bool;

typedef struct Pixels
{
	/*
	A new typedef with rgb pattern
	*/
	unsigned char r, g, b;
} Pixel;

typedef struct Images
{
	/*
	A new typedef who read an image
	with width, height integer,
	an header char[54] and the 
	Pixel typedef
	*/
	int width, height;
	char header[54];
	Pixel *pixels;
} Image;

static Image *readPPM(const char *filename)
{
	Image *img;
	FILE *file;
		
}
